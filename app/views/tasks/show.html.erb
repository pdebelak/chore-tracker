<h2 class="subtitle"><%= @task.description %></h2>
<% TaskDecorator.new(@task).tap do |decorated_task| %>
  <p>Schedule - <%= decorated_task.schedule_explanation %></p>
  <% if @task.last_completed_at.present? %>
    <p>Last completed - <%= decorated_task.last_completed %></p>
  <% end %>
<% end %>
<br>
<p>
  <%= link_to "Edit", edit_list_task_path(@list, @task), class: "button" %>
  &nbsp;
  <%= link_to "Delete", list_task_path(@list, @task), class: "button is-danger", method: :delete, data: { confirm: "Are you sure?" } %>
</p>
<br>
<p><%= link_to "Go back", list_path(@list) %></p>
